<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.excy.activities.SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="192dp"
                android:layout_height="130dp"
                android:paddingTop="@dimen/padding_top"
                android:paddingBottom="@dimen/padding_bottom"
                android:src="@drawable/excy_logo_final_white_new"
                android:id="@+id/ivExcyLogo"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_top"
                android:paddingBottom="@dimen/padding_bottom"
                android:layout_below="@+id/ivExcyLogo"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/exercise_for_busy_lives"
                android:textColor="@color/white"
                android:id="@+id/tvExerciseForBusyLives"
                android:textSize="18sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/tvExerciseForBusyLives"
                android:id="@+id/rgRadioButtons">

                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/male"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:id="@+id/rbMale"
                    app:buttonTint="@color/white"
                    android:textSize="18sp" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/female"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:id="@+id/rbFemale"
                    android:textSize="18sp"
                    app:buttonTint="@color/white" />
            </RadioGroup>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_top"
                android:paddingBottom="@dimen/padding_bottom"
                android:id="@+id/inputLayoutWeight"
                android:layout_below="@id/rgRadioButtons"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                hintTextAppearance="@style/FloatingLabelHintText">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etWeight"
                android:hint="@string/weight"
                android:textColor="@color/white"
                android:theme="@style/FloatingLabelEditText"
                android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_top"
                android:paddingBottom="@dimen/padding_bottom"
                android:id="@+id/inputLayoutHeight"
                android:layout_below="@id/inputLayoutWeight"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                hintTextAppearance="@style/FloatingLabelHintText">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etHeight"
                    android:hint="@string/height"
                    android:textColor="@color/white"
                    android:theme="@style/FloatingLabelEditText"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_top"
                android:paddingBottom="@dimen/padding_bottom"
                android:id="@+id/inputLayoutAge"
                android:layout_below="@id/inputLayoutHeight"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                hintTextAppearance="@style/FloatingLabelHintText">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etAge"
                    android:hint="@string/age"
                    android:textColor="@color/white"
                    android:theme="@style/FloatingLabelEditText"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_top"
                android:paddingBottom="@dimen/padding_bottom"
                android:id="@+id/inputLayoutUserName"
                android:layout_below="@id/inputLayoutAge"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                hintTextAppearance="@style/FloatingLabelHintText">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etUserName"
                    android:hint="@string/username"
                    android:textColor="@color/white"
                    android:theme="@style/FloatingLabelEditText"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_top"
                android:paddingBottom="@dimen/padding_bottom"
                android:id="@+id/inputLayoutEmail"
                android:layout_below="@id/inputLayoutUserName"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                hintTextAppearance="@style/FloatingLabelHintText">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etEmail"
                    android:hint="@string/user_email"
                    android:textColor="@color/white"
                    android:theme="@style/FloatingLabelEditText"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_top"
                android:paddingBottom="@dimen/padding_bottom"
                android:id="@+id/inputLayoutPassword"
                android:layout_below="@id/inputLayoutEmail"
                android:textColorHint="@color/white"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                hintTextAppearance="@style/FloatingLabelHintText">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etPassword"
                    android:hint="@string/user_password"
                    android:textColor="@color/white"
                    android:theme="@style/FloatingLabelEditText"
                    android:inputType="textPassword" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:text="@string/sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_top"
                android:paddingBottom="@dimen/padding_bottom"
                android:id="@+id/btnSignUp"
                android:background="@color/colorAccent"
                android:textColor="@color/white"
                android:layout_below="@+id/inputLayoutPassword"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_top"
                android:paddingBottom="@dimen/padding_bottom"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/llSignUp"
                android:layout_below="@+id/tvForgotPassword"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/have_an_account"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:id="@+id/tvDontHaveAnAccount"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:background="@color/colorSignUpBlue"
                    android:layout_weight="1"
                    android:id="@+id/btnLogin"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_top"
                android:paddingBottom="@dimen/padding_bottom"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/forgot_password"
                android:textColor="@color/white"
                android:id="@+id/tvForgotPassword"
                android:layout_marginTop="19dp"
                android:layout_below="@+id/btnLogin"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_top"
                android:paddingBottom="@dimen/padding_bottom"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/dont_have_an_excy"
                android:textColorLink="@color/white"
                android:linksClickable="true"
                android:id="@+id/tvLink"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="35dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
