<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_workouts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.excy.activities.WorkoutListActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="144dp"
                android:layout_height="90dp"
                android:paddingTop="@dimen/padding_top"
                android:paddingBottom="@dimen/padding_bottom"
                android:src="@drawable/excy_logo_final_white_new"
                android:id="@+id/ivExcyLogo"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivExcyLogo"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="8dp">

                <ImageButton
                    android:id="@+id/ibArmCandy"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_marginBottom="8dp"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/wb_arm_candy"
                    android:background="@color/colorPrimary"/>

                <ImageButton
                    android:id="@+id/ibSuperCycleCardio"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_below="@+id/ibArmCandy"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/wb_super_cycle_cardio"
                    android:background="@color/colorPrimary"/>

                <ImageButton
                    android:id="@+id/ibCycleLegBlast"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_below="@+id/ibSuperCycleCardio"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/wb_cycle_leg_blast"
                    android:background="@color/colorPrimary"/>

                <ImageButton
                    android:id="@+id/ibCoreFloorExplosion"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_below="@+id/ibCycleLegBlast"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/wb_core_floor_explosion"
                    android:background="@color/colorPrimary"/>

                <ImageButton
                    android:id="@+id/ibArmBlast"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_below="@+id/ibCoreFloorExplosion"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/wb_arm_blast"
                    android:background="@color/colorPrimary"/>

                <ImageButton
                    android:id="@+id/ibUltimateArmAndLegToning"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_below="@+id/ibArmBlast"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/wb_ultimate_arm_leg_tone"
                    android:background="@color/colorPrimary"/>

                <ImageButton
                    android:id="@+id/ibForwardsBackwards"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_below="@+id/ibUltimateArmAndLegToning"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/wb_forward_backwards"
                    android:background="@color/colorPrimary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_below="@+id/ibForwardsBackwards"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="@dimen/padding_bottom"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/dont_have_an_excy"
                    android:textColorLink="@color/white"
                    android:linksClickable="true"
                    android:layout_marginBottom="40dp"
                    android:id="@+id/tvLink" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <include layout="@layout/bottom_nav_bar"></include>
</RelativeLayout>
