<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_workouts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.excy.excy.activities.WorkoutsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageButton
            android:id="@+id/ibArmCandy"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@drawable/wb_arm_candy" />

        <ImageButton
            android:id="@+id/ibSuperCycleCardio"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/ibArmCandy"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/wb_super_cycle_cardio"/>

        <ImageButton
            android:id="@+id/ibCycleLegBlast"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/ibSuperCycleCardio"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/wb_cycle_leg_blast"/>

        <ImageButton
            android:id="@+id/ibCoreFloorExplosion"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/ibCycleLegBlast"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/wb_core_floor_explosion"/>

        <ImageButton
            android:id="@+id/ibArmBlast"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/ibCoreFloorExplosion"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/wb_arm_blast"/>

        <ImageButton
            android:id="@+id/ibUltimateArmAndLegToning"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/ibArmBlast"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/wb_ultimate_arm_leg_tone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ibUltimateArmAndLegToning"
            android:paddingTop="@dimen/padding_top"
            android:paddingBottom="@dimen/padding_bottom"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/dont_have_an_excy"
            android:textColorLink="@color/white"
            android:linksClickable="true"
            android:id="@+id/tvLink" />

    </RelativeLayout>

    <include layout="@layout/bottom_nav_bar"></include>
</RelativeLayout>
